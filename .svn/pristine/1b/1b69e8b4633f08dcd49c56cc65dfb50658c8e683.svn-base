#messageBoard {
	width:600px;
}

#messageBoard ul {
	list-style:none;
	width:100%;
	margin:0px auto 30px auto;
	padding:0px;
}

#messageBoard ul li {
	margin:30px 0px auto 40px;
	width:100%;
	height:120px;
	background:#f5d52e;
	padding:5px 10px;
	border-radius: 15px;
	color: #4D4141;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	font-size: 18px;
}
#messageBoard ul li p{
	text-indent: 20px;
}
#messageBoard ul li h1{
	font-size: 10px;
	padding-bottom:2px;
	margin-bottom: 10px;
	border-bottom-style : solid;
	border-bottom-width: 1px;
}
#messageBoard ul li h1 span{
	margin-right: 30px;
}
.messageBoardloading {
	background:#c1c39a;
	color:#303030;
	font-size:20px;
	padding:5px 10px;
	text-align:center;
	width:450px;
	margin:30px auto auto 120px;
	display:none;
	border-radius: 5px;
}